{
  "search.followSymlinks": false,
  "workbench.colorTheme": "An Old Hope",
  "editor.multiCursorModifier": "ctrlCmd",
  "editor.formatOnPaste": true,
  // 配置文件关联，以便启用对应的智能提示，比如wxss使用css
  "files.associations": {
    "*.vue": "vue",
    "*.wxss": "css"
  },
  "editor.minimap.enabled": false,
  "editor.detectIndentation": false,
  "files.autoSave": "off",
  "window.zoomLevel": 0,
  "workbench.iconTheme": "vscode-icons",
  //保存时自动格式化
  "editor.formatOnSave": true,
  "beautify.language": {
    "js": {
      "type": ["javascript", "json"],
      "filename": [".eslintrc", ".jsbeautify"]
    },
    "css": ["css", "scss"],
    "html": ["htm", "html", "vue"]
  },
  "sync.gist": "1de18ad5cf056d3bf68517edefde90a4",

  "sync.autoDownload": false,
  "sync.autoUpload": false,

  "sync.forceDownload": false,

  "sync.quietSync": false,

  "[javascript]": {},
  "vsicons.dontShowNewVersionMessage": true,
  "sync.removeExtensions": true,
  "sync.syncExtensions": true,
  // 开启 vscode 文件路径导航
  "breadcrumbs.enabled": true,
  // prettier 设置语句末尾不加分号
  "prettier.semi": false,
  // 如果为true，将使用单引号而不是双引号
  "prettier.singleQuote": true,
  // 选择 vue 文件中 template 的格式化工具
  "editor.renderControlCharacters": true,
  // vetur 的自定义设置
  "vetur.format.defaultFormatterOptions": {
    "prettier": {
      "singleQuote": true,
      "semi": false
    }
  },
  /* "editor.fontLigatures": true, */
  "editor.fontFamily": "Operator Mono, Dank Mono, Fira Code Light",
  "search.useIgnoreFiles": false,
  "git.enabled": false,
  "git.decorations.enabled": false,
  "git.showInlineOpenFileAction": false,
  "git.confirmSync": false,
  "git.autorefresh": false,
  "git.promptToSaveFilesBeforeCommit": false,
  "git.showProgress": false,
  "git.detectSubmodules": false,
  // Controls if the diff editor shows the diff side by side or inline
  "diffEditor.renderSideBySide": false,
  // Insert spaces when pressing Tab
  "editor.insertSpaces": true,
  // A multiplier to be used on the `deltaX` and `deltaY` of mouse wheel scroll events
  "editor.mouseWheelScrollSensitivity": 5,
  // 控制前面小点点的显示
  "editor.renderWhitespace": "all",
  // Extensions to be installed by the Extension Manager
  // Default end of line character
  "files.eol": "\n",
  // 排除文件搜索区域，比如node_modules(贴心的默认设置已经屏蔽了)
  "files.exclude": {
    "**/*.build": true,
    "**/*.git": true,
    "**/*.err": true,
    "**/*.rec": true,
    "**/*.log": true,
    "**/*.evt": true,
    "**/buildfre.*": true,
    "**/buildchk.*": true,
    "**/.DS_Store": true
  },
  "javascript.implicitProjectConfig.experimentalDecorators": true,
  // Glob patterns for excluding files and folders in searches
  "emmet.includeLanguages": {
    "javascript": "javascriptreact"
  },
  "search.exclude": {
    "**/node_modules": true,
    "**/bower_components": true,
    ".build/**": true,
    "out*/**": true,
    "i18n/**": true,
    "extensions/**/out/**": true,
    "*.min.js": true
  }
}
