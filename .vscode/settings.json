{
  "search.followSymlinks": false,
  "workbench.colorTheme": "One Dark Pro",
  "editor.multiCursorModifier": "ctrlCmd",

  "workbench.iconTheme": "vscode-icons",
  //保存时自动格式化
  "editor.formatOnSave": true,


  "[javascript]": {},
  "vsicons.dontShowNewVersionMessage": true,
  "sync.removeExtensions": true,
  "sync.syncExtensions": true,
  // 开启 vscode 文件路径导航
  "breadcrumbs.enabled": true,
  // prettier 设置语句末尾不加分号
  "prettier.semi": false,
  // 如果为true，将使用单引号而不是双引号
  "prettier.singleQuote": true,

  /* "editor.fontLigatures": true, */
  "editor.fontFamily": "Operator Mono, Dank Mono, Fira Code Light",
  "search.useIgnoreFiles": false,
  "git.enabled": false,
  "git.decorations.enabled": false,
  "git.showInlineOpenFileAction": false,
  "git.confirmSync": false,
  "git.autorefresh": false,
  "git.showProgress": false,
  "git.detectSubmodules": false,
  // Controls if the diff editor shows the diff side by side or inline
  "diffEditor.renderSideBySide": false,
  // Insert spaces when pressing Tab
  "editor.insertSpaces": true,
  // A multiplier to be used on the `deltaX` and `deltaY` of mouse wheel scroll events

  // 控制前面小点点的显示
  "editor.renderWhitespace": "all",
  // Extensions to be installed by the Extension Manager
  // Default end of line character
  "files.eol": "\n",
  // 排除文件搜索区域，比如node_modules(贴心的默认设置已经屏蔽了)
  "files.exclude": {
    "**/*.build": true,
    "**/*.git": true,
    "**/*.err": true,
    "**/*.rec": true,
    "**/*.log": true,
    "**/*.evt": true,
    "**/buildfre.*": true,
    "**/buildchk.*": true,
    "**/.DS_Store": true
  },

  // Glob patterns for excluding files and folders in searches
  "emmet.includeLanguages": {
    "javascript": "javascriptreact"
  },
  "search.exclude": {
    "**/node_modules": true,
    "**/bower_components": true,
    ".build/**": true,
    "out*/**": true,
    "i18n/**": true,
    "extensions/**/out/**": true,
    "*.min.js": true
  }
}